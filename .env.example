# Browser Automation Platform Configuration

# API Keys (set these environment variables)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CAPTCHA_SERVICE_API_KEY=your_2captcha_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Browser Settings
BROWSER_HEADLESS=false
BROWSER_TIMEOUT=30000
BROWSER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# CAPTCHA Service Settings
CAPTCHA_SERVICE_URL=http://2captcha.com
CAPTCHA_TIMEOUT=120

# Scheduling Settings
CRON_CHECK_INTERVAL=60
BACKGROUND_MONITOR_INTERVAL=30

# Rate Limiting
ACCOUNT_CREATION_DELAY_MIN=5
ACCOUNT_CREATION_DELAY_MAX=15
REQUEST_RETRY_ATTEMPTS=3
REQUEST_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=automation.log